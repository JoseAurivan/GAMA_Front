@using Core.Entities;

<EditForm Model="@endereco">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nome">Bairro:</label>
            <InputText id="nome" class="form-control" @bind-Value="endereco.Bairro" required></InputText>
        </div>
        <div class="form-group col-md-6">
            <label for="rua">Rua:</label>
            <InputText type="text" class="form-control" id="rua" @bind-Value="endereco.Rua" required></InputText>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="cpf">Logradouro:</label>
            <InputText id="cpf" class="form-control" @bind-Value="endereco.Logradouro" required></InputText>
        </div>
        <div class="form-group col-md-6">
            <label for="pispasep">CEP:</label>
            <InputText id="pispasep" class="form-control" @bind-Value="endereco.CEP" required></InputText>
        </div>
    </div>
</EditForm>


@code {
    [Parameter] public  Endereco endereco { get; set; }
}
